<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartExplicitActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Explicit Activity"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnStartImplicitActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Implicit Activity"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnStartActivityForResultSingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Activity for Single String Result"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnStartActivityForResultPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Activity for Person Result"
        android:onClick="onClick"/>

</LinearLayout>